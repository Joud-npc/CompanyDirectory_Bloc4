<Window x:Class="CompanyDirectory.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Annuaire" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <DataGrid x:Name="EmployeeGrid" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nom" Binding="{Binding LastName}" Width="*"/>
                <DataGridTextColumn Header="Prénom" Binding="{Binding FirstName}" Width="*"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*"/>
                <DataGridTextColumn Header="Téléphone" Binding="{Binding Phone}" Width="*"/>
                <DataGridTextColumn Header="Site" Binding="{Binding Site.Ville}" Width="*"/>
                <DataGridTextColumn Header="Service" Binding="{Binding Service.Nom}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>