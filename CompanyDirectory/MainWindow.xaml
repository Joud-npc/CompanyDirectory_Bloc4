<Window x:Class="CompanyDirectory.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Annuaire - Entreprise Agroalimentaire" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen"
        KeyDown="Window_KeyDown"
        PreviewKeyDown="Window_KeyDown">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Barre de recherche -->
        <StackPanel Grid.Row="0" Orientation="Vertical" Margin="0,0,0,15">
            <TextBlock Text="Recherche d'employés" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <!-- Recherche par nom -->
                <StackPanel Margin="0,0,15,0">
                    <TextBlock Text="Nom/Prénom :" Margin="0,0,0,5"/>
                    <TextBox x:Name="TxtSearch" Width="200" Height="25" 
                             TextChanged="TxtSearch_TextChanged"
                             ToolTip="Code secret: ↑↓↑↓→←→← (utilisez les flèches du clavier)"/>
                </StackPanel>

                <!-- Filtre par site -->
                <StackPanel Margin="0,0,15,0">
                    <TextBlock Text="Site :" Margin="0,0,0,5"/>
                    <ComboBox x:Name="CmbSite" Width="150" Height="25"
                              DisplayMemberPath="Ville"
                              SelectedValuePath="Id"
                              SelectionChanged="CmbSite_SelectionChanged"/>
                </StackPanel>

                <!-- Filtre par service -->
                <StackPanel Margin="0,0,15,0">
                    <TextBlock Text="Service :" Margin="0,0,0,5"/>
                    <ComboBox x:Name="CmbService" Width="150" Height="25"
                              DisplayMemberPath="Nom"
                              SelectedValuePath="Id"
                              SelectionChanged="CmbService_SelectionChanged"/>
                </StackPanel>

                <!-- Boutons -->
                <StackPanel Orientation="Vertical" VerticalAlignment="Bottom">
                    <Button x:Name="BtnSearch" Content="Rechercher" Width="100" Height="25" 
                            Click="BtnSearch_Click" Margin="0,0,0,5"/>
                    <Button x:Name="BtnReset" Content="Réinitialiser" Width="100" Height="25" 
                            Click="BtnReset_Click"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>

        <!-- Grille des employés -->
        <DataGrid x:Name="EmployeeGrid" Grid.Row="1" 
                  AutoGenerateColumns="False" 
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  SelectionMode="Single"
                  GridLinesVisibility="Horizontal"
                  MouseDoubleClick="EmployeeGrid_MouseDoubleClick">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nom" Binding="{Binding LastName}" Width="120" CanUserSort="True"/>
                <DataGridTextColumn Header="Prénom" Binding="{Binding FirstName}" Width="120" CanUserSort="True"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="200"/>
                <DataGridTextColumn Header="Téléphone" Binding="{Binding Phone}" Width="120"/>
                <DataGridTextColumn Header="Site" Binding="{Binding Site.Ville}" Width="100"/>
                <DataGridTextColumn Header="Service" Binding="{Binding Service.Nom}" Width="120"/>
                <DataGridTemplateColumn Header="Actions" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Détails" Click="BtnDetails_Click" 
                                    Tag="{Binding Id}" Width="70" Height="25"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Barre de statut -->
        <StatusBar Grid.Row="2" Height="25">
            <StatusBarItem>
                <TextBlock x:Name="StatusText" Text="Prêt - Tapez ↑↓↑↓→←→← pour l'admin"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock x:Name="CountText" Text="0 employé(s)"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Mode : Visiteur" x:Name="ModeText"/>
                    <TextBlock Text=" | Utilisateur : " Margin="10,0,0,0"/>
                    <TextBlock x:Name="UserText" FontWeight="Bold"/>
                </StackPanel>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>