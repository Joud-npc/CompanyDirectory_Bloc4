<Window x:Class="CompanyDirectory.Views.AdminPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        Title="Mot de passe Administrateur" Height="160" Width="360" WindowStartupLocation="CenterOwner" WindowStyle="ToolWindow" ResizeMode="NoResize">
    <Grid Margin="12">
        <StackPanel>
            <TextBlock Text="Entrez le mot de passe administrateur" />
            <PasswordBox x:Name="PwdBox" Margin="0,8,0,0"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
                <Button Content="Annuler" Click="Cancel_Click" Margin="0,0,8,0"/>
                <Button Content="Valider" Click="Ok_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>