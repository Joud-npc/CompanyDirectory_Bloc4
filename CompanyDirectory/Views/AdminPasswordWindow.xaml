<Window x:Class="CompanyDirectory.Views.AdminPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:CompanyDirectory.ViewModels"
        xmlns:converters="clr-namespace:CompanyDirectory.Converters"
        Title="Mot de passe admin" Height="200" Width="350"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <vm:AdminPasswordViewModel />
    </Window.DataContext>

    <StackPanel Margin="20" VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBlock Text="Entrez le mot de passe admin :" FontWeight="Bold" Margin="0,0,0,10"/>

        <Grid>
            <PasswordBox x:Name="PasswordBox" Width="200" Height="30"/>
            <TextBlock Text="Mot de passe" IsHitTestVisible="False" Foreground="Gray" Margin="5,0,0,0" VerticalAlignment="Center"
                       Visibility="{Binding Password, ElementName=PasswordBox, Converter={StaticResource StringToVisibilityConverter}}" />
        </Grid>

        <Button Width="200" Height="30" Margin="0,10,0,0" Content="Valider"
                Command="{Binding ValidateCommand}" CommandParameter="{Binding ElementName=PasswordBox}" />
    </StackPanel>
</Window>