<Window x:Class="CompanyDirectory.Views.AdminPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AccÃ¨s Administrateur" Height="250" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- En-tÃªte -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,20">
            <TextBlock Text="ðŸ”’" FontSize="30" HorizontalAlignment="Center" Margin="0,0,0,10"/>
            <TextBlock Text="Mode Administrateur" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock Text="Veuillez saisir le mot de passe administrateur" 
                       FontSize="12" HorizontalAlignment="Center" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Saisie mot de passe -->
        <Grid Grid.Row="1" VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="Mot de passe :" Margin="0,0,0,5"/>
            <PasswordBox Grid.Row="1" x:Name="PasswordBox" Height="30" FontSize="14"
                         KeyDown="PasswordBox_KeyDown"/>
            <TextBlock Grid.Row="2" x:Name="ErrorMessage" Foreground="Red" 
                       FontSize="10" Margin="0,5,0,0" Visibility="Collapsed"/>
        </Grid>

        <!-- Boutons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button x:Name="BtnValidate" Content="Valider" Width="80" Height="30" 
                    Click="BtnValidate_Click" IsDefault="True" Margin="0,0,10,0"/>
            <Button x:Name="BtnCancel" Content="Annuler" Width="80" Height="30" 
                    Click="BtnCancel_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>