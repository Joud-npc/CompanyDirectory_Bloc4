<Window x:Class="CompanyDirectory.Views.BulkEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Modification Multiple" Height="450" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- En-tête -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock x:Name="TxtSelectedCount" 
                       Text="0 employé(s) sélectionné(s)" 
                       FontWeight="Bold" 
                       FontSize="14"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>
            <TextBlock Text="Choisissez les modifications à appliquer :"
                       HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- Options de modification -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Modification du site -->
                <GroupBox Header="Modifier le site" Margin="0,0,0,15" Padding="10">
                    <StackPanel>
                        <CheckBox x:Name="ChkUpdateSite" 
                                  Content="Changer le site pour tous les employés sélectionnés"
                                  Margin="0,0,0,10"
                                  Checked="ChkUpdateSite_Checked"
                                  Unchecked="ChkUpdateSite_Unchecked"/>
                        <ComboBox x:Name="CmbNewSite" 
                                  IsEnabled="False"
                                  Height="25"
                                  DisplayMemberPath="Ville"
                                  SelectedValuePath="Id"
                                  ToolTip="Sélectionnez le nouveau site"/>
                    </StackPanel>
                </GroupBox>

                <!-- Modification du service -->
                <GroupBox Header="Modifier le service" Margin="0,0,0,15" Padding="10">
                    <StackPanel>
                        <CheckBox x:Name="ChkUpdateService" 
                                  Content="Changer le service pour tous les employés sélectionnés"
                                  Margin="0,0,0,10"
                                  Checked="ChkUpdateService_Checked"
                                  Unchecked="ChkUpdateService_Unchecked"/>
                        <ComboBox x:Name="CmbNewService" 
                                  IsEnabled="False"
                                  Height="25"
                                  DisplayMemberPath="Nom"
                                  SelectedValuePath="Id"
                                  ToolTip="Sélectionnez le nouveau service"/>
                    </StackPanel>
                </GroupBox>

                <!-- Actions supplémentaires -->
                <GroupBox Header="Actions supplémentaires" Margin="0,0,0,15" Padding="10">
                    <StackPanel>
                        <CheckBox x:Name="ChkUpdateEmailDomain" 
                                  Content="Modifier le domaine email"
                                  Margin="0,0,0,5"
                                  Checked="ChkUpdateEmailDomain_Checked"
                                  Unchecked="ChkUpdateEmailDomain_Unchecked"/>
                        <TextBox x:Name="TxtNewEmailDomain" 
                                 IsEnabled="False"
                                 Height="25"
                                 Text="@entreprise.fr"
                                 ToolTip="Nouveau domaine email (ex: @nouvelleentreprise.fr)"/>
                    </StackPanel>
                </GroupBox>

                <!-- Résumé des modifications -->
                <GroupBox Header="Résumé des modifications" Margin="0,0,0,15" Padding="10">
                    <TextBox x:Name="TxtSummary" 
                             IsReadOnly="True"
                             Height="60"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto"
                             Background="#F0F0F0"
                             Text="Aucune modification sélectionnée"/>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <!-- Boutons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="0,20,0,0">
            <Button x:Name="BtnApply" 
                    Content="Appliquer les modifications" 
                    Width="180" 
                    Height="40" 
                    Click="BtnApply_Click"
                    IsEnabled="False"
                    Background="#4CAF50"
                    Foreground="White"
                    FontWeight="Bold"
                    Margin="0,0,20,0"/>
            <Button x:Name="BtnCancel" 
                    Content="Annuler" 
                    Width="100" 
                    Height="40" 
                    Click="BtnCancel_Click"
                    Background="#F44336"
                    Foreground="White"
                    FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>