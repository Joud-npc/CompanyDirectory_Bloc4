<Window x:Class="CompanyDirectory.Views.EmployeeEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestion Employé" Height="450" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Titre -->
        <TextBlock Grid.Row="0" x:Name="TitleText" Text="Nouvel Employé" 
                   FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- Formulaire -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Nom -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Nom *" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBox x:Name="TxtLastName" Height="25"/>
                </StackPanel>

                <!-- Prénom -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Prénom *" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBox x:Name="TxtFirstName" Height="25"/>
                </StackPanel>

                <!-- Email -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Email *" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBox x:Name="TxtEmail" Height="25"/>
                </StackPanel>

                <!-- Téléphone -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Téléphone *" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBox x:Name="TxtPhone" Height="25"/>
                </StackPanel>

                <!-- Username -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Nom d'utilisateur *" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBox x:Name="TxtUsername" Height="25"/>
                </StackPanel>

                <!-- Password -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Mot de passe *" FontWeight="Bold" Margin="0,0,0,5"/>
                    <PasswordBox x:Name="TxtPassword" Height="25"/>
                </StackPanel>

                <!-- Site -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Site *" FontWeight="Bold" Margin="0,0,0,5"/>
                    <ComboBox x:Name="CmbSite" Height="25" 
                              DisplayMemberPath="Ville" 
                              SelectedValuePath="Id"/>
                </StackPanel>

                <!-- Service -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Service *" FontWeight="Bold" Margin="0,0,0,5"/>
                    <ComboBox x:Name="CmbService" Height="25" 
                              DisplayMemberPath="Nom" 
                              SelectedValuePath="Id"/>
                </StackPanel>

                <TextBlock Text="* Champs obligatoires" FontStyle="Italic" 
                           Foreground="Gray" FontSize="10" Margin="0,10,0,0"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Boutons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button x:Name="BtnSave" Content="Enregistrer" Width="100" Height="30" 
                    Click="BtnSave_Click" IsDefault="True" Margin="0,0,10,0"/>
            <Button x:Name="BtnCancel" Content="Annuler" Width="80" Height="30" 
                    Click="BtnCancel_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>