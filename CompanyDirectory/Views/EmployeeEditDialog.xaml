<Window x:Class="CompanyDirectory.Views.EmployeeEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Modifier Employé" Height="400" Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock Text="Prénom :" Margin="0,0,0,5"/>
            <TextBox x:Name="TxtFirstName" Height="25" Margin="0,0,0,10"/>

            <TextBlock Text="Nom :" Margin="0,0,0,5"/>
            <TextBox x:Name="TxtLastName" Height="25" Margin="0,0,0,10"/>

            <TextBlock Text="Email :" Margin="0,0,0,5"/>
            <TextBox x:Name="TxtEmail" Height="25" Margin="0,0,0,10"/>

            <TextBlock Text="Téléphone :" Margin="0,0,0,5"/>
            <TextBox x:Name="TxtPhone" Height="25" Margin="0,0,0,10"/>

            <TextBlock Text="Nom d'utilisateur :" Margin="0,0,0,5"/>
            <TextBox x:Name="TxtUsername" Height="25" Margin="0,0,0,10"/>

            <TextBlock Text="Site :" Margin="0,0,0,5"/>
            <ComboBox x:Name="CmbSite" Height="25" Margin="0,0,0,10"
                      DisplayMemberPath="Ville" SelectedValuePath="Id"/>

            <TextBlock Text="Service :" Margin="0,0,0,5"/>
            <ComboBox x:Name="CmbService" Height="25" Margin="0,0,0,10"
                      DisplayMemberPath="Nom" SelectedValuePath="Id"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Enregistrer" Width="100" Height="35" Margin="0,0,10,0" Click="BtnSave_Click"/>
            <Button Content="Annuler" Width="100" Height="35" Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>