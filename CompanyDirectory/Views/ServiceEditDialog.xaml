<Window x:Class="CompanyDirectory.Views.ServiceEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestion Service" Height="250" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Titre -->
        <TextBlock Grid.Row="0" x:Name="TitleText" Text="Nouveau Service" 
                   FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,30"/>

        <!-- Formulaire -->
        <StackPanel Grid.Row="1" VerticalAlignment="Center">
            <StackPanel Margin="0,0,0,20">
                <TextBlock Text="Nom du service *" FontWeight="Bold" Margin="0,0,0,10"/>
                <TextBox x:Name="TxtNom" Height="30" FontSize="14"/>
                <TextBlock Text="Exemple: ComptabilitÃ©, Production, Maintenance..." 
                           FontStyle="Italic" Foreground="Gray" FontSize="10" Margin="0,5,0,0"/>
            </StackPanel>

            <TextBlock Text="* Champs obligatoires" FontStyle="Italic" 
                       Foreground="Gray" FontSize="10"/>
        </StackPanel>

        <!-- Boutons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button x:Name="BtnSave" Content="Enregistrer" Width="100" Height="30" 
                    Click="BtnSave_Click" IsDefault="True" Margin="0,0,10,0"/>
            <Button x:Name="BtnCancel" Content="Annuler" Width="80" Height="30" 
                    Click="BtnCancel_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>